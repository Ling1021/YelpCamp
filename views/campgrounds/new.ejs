<%- include("../partials/header"); %>


	<div class="row">
		<h1 style="text-align:center;">Create a New Camp Ground</h1>
		<div style="width:30%; margin:25px auto;" >
			<form action="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="name">Campground Name</label>
					<input type ="text" class="form-control" name="campground[name]" placeholder="name" required>
				</div>
				
				<div class="form-group">
					<label for="price">Price</label>
					<input type ="number" class="form-control" name="campground[price]" placeholder="price" min="0.00" step="0.01">
				</div>
				
				<div class="form-group">
				<label for="image">Image URL</label>
				<input type="file" class="form-control" id="image" name="image" accept="image/*" required>
				</div>	
				
				<div class="form-group">
				<label for="location">Location</label>
				<input type="text" class="form-control" name="campground[location]" placeholder="location">
				</div>	
				
				<div class="form-group">
				<label for="des">Description</label>
				<input type="text" class="form-control" name="campground[des]" placeholder="description" required>
				</div>	
				
				<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
				</div>
				
			</form>
			<a href ="/campgrounds">Go Back</a>
		</div>
	</div>		

<%- include("../partials/footer") %>