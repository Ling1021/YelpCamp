<%- include("../partials/header"); %>

<div class="row">
	<div class="col-md-6">
		<div class="card" style="width: 100%">
			<div class="thumbnail">
			<img class="card-img-top" src="<%= user.avatar %>" alt="user profile image">
			</div>
			 <div class="card-body">
				<h5 class="card-title" id="username"><%= user.firstName + " " + user.lastName %></h5>
				 <% if(currentUser && currentUser.id !== user.id){ %>
					<form action="/follow/<%= user.id %>" method="GET" id="follow">
						<input class="btn btn-xs btn-primary" type="submit" value="Follow">
					</form>
				<% } %>
				<p class="card-text">Lorem ipsum dolor sit amet, amet neque, magna aliquam lorem semper, sed platea in mauris elit, metus bibendum auctor ipsum at amet, odio dapibus per arcu eget. A odio ac leo morbi, eu tincidunt tincidunt at sapiente litora sem, hendrerit mattis commodi.</p>
			  </div>
		</div>
	</div>
		
	<div class="col-md-6">
		<h1><%= user.username%>'s Campground</h1>
		<ul>
		<% campground.forEach(function(campground){ %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
			<% }) %>
		</ul>
	</div>
</div>


<%- include("../partials/footer") %>


  
 
